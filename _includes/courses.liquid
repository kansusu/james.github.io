<div class="col">
  <a href="{% if course.redirect %}{{ course.redirect }}{% else %}{{ course.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if course.img %}
        {%
          include figure.liquid
          loading="eager"
          path=course.img
          sizes="250px"
          alt="course thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ course.title }}</h2>
        <p class="card-text">{{ course.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if course.syllabus %}
            <div class="icon" data-toggle="tooltip" title="View Syllabus">
              <a href="{{ course.syllabus }}"><i class="fa-solid fa-file-alt syllabus-icon"></i></a>
            </div>
          {% endif %}
          {% if course.additional_resources %}
            <div class="icon" data-toggle="tooltip" title="Additional Resources">
              <a href="{{ course.additional_resources }}"><i class="fa-solid fa-link resources-icon"></i></a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
